<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_1"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_recyc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/uc">
    </ImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/img_recyc"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cardv_title_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cv_rtbar"
            android:textSize="13sp"
            android:padding="1dp"
            android:textColor="#4A4A4A"
            android:fontFamily="@font/gotham_book"
            android:text="Sorun Ã‡ozucu">
        </TextView>
        <RatingBar
            android:id="@+id/cv_rtbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:rating="4.5"
            android:numStars="5"
            android:progressTint="#F9C164"
            app:layout_constraintTop_toBottomOf="@id/cardv_title_item1"
            app:layout_constraintBottom_toTopOf="@id/cardv_adet_item1"
            app:layout_constraintStart_toStartOf="parent">
        </RatingBar>
        <TextView
            android:id="@+id/cardv_adet_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_rtbar"
            android:textSize="10sp"
            android:alpha="0.3"
            android:padding="1dp"
            android:gravity="bottom|start"
            android:textColor="#000000"
            android:fontFamily="@font/gotham_book"
            android:text="12 Adet"
            tools:ignore="SmallSp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>